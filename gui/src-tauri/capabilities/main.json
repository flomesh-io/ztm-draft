{
  "$schema": "./schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "window:allow-set-title",
    "window:allow-set-size",
    "window:allow-set-resizable",
    "webview:allow-set-webview-size",
    "webview:allow-internal-toggle-devtools",
    {
			"identifier": "shell:allow-execute",
			"allow": [
				{
					"name": "sudo pipy",
					"cmd": "sudo pipy",
					"args": [
						{
							"validator": ".+"
						}
					],
					"sidecar": false
				},
				{
					"name": "pipy",
					"cmd": "pipy",
					"args": [
						{
							"validator": ".+"
						}
					],
					"sidecar": false
				},
				{
					"name": "lsof",
					"cmd": "lsof",
					"args": [
						"-i",
						{
							"validator": ".+"
						}
					],
					"sidecar": false
				},
				{
					"name": "kill",
					"cmd": "kill",
					"args": [
						{
							"validator": ".+"
						}
					],
					"sidecar": false
				}
			]
		},
    "shell:allow-kill",
    "shell:allow-open",
    "shell:allow-stdin-write"
  ]
}